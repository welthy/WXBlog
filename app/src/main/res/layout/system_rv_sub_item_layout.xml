<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="cn.wx.mywanandroid.data.bean.system.SystemChildrenItem"/>
        <variable
            name="systemChildItem"
            type="SystemChildrenItem" />
    </data>

    <TextView
        android:id="@+id/article_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{systemChildItem.name}"
        android:textColor="@color/color_green"
        android:background="@drawable/shape_label_green"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"/>
</layout>