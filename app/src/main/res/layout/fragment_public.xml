<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tab="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.fragments.PublicFragment">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/public_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tab:tabIndicatorColor="@color/color_blue"
            tab:tabMaxWidth="150dp"
            tab:tabMode="scrollable"
            tab:tabSelectedTextColor="@color/color_blue"
            tab:tabTextColor="@color/color_grey"/>

       <androidx.viewpager2.widget.ViewPager2
           android:id="@+id/public_vp2"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@+id/public_tab"/>

    </RelativeLayout>
</layout>